<%= title "Reset password" %>
<%= form_tag password_resets_path do%>
	<div class="row">
  		<div class="small-12 columns">
	<%= label_tag :email, "Email" %>
		</div>
	</div>
	<div class="row">
  		<div class="small-12 columns">
	<%= text_field_tag :email %>
		</div>
	</div>
	<div class="row">
  		<div class="small-12 columns">
    		<%= submit_tag "Sign Up", class: "button radius expand" %>
    	</div>
 	</div>
<% end %>