<%= title "Update your password" %>
<%= form_for @user, builder: FoundationFormBuilder, url: password_reset_path(@user.password_reset_token), html: {  method: :patch} do |form| %>

	<%= form.password_field :password, label: "Password" %>
	<%= form.password_field :password_confirmation, label: "Password (again)" %>

	<%= form.submit "Change password" %>

<% end %>