<!DOCTYPE html>
<html>
<head>
  <title>Odot</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="nav">
		<h1><%= link_to %Q|Odot|, root_path %></h1>
			<ul>
				<li><%= link_to %Q|Todo Lists|, todo_lists_path %></li>
				<% if @current_user %>
				<li><%= link_to %Q|Log Out|, logout_path, method: :delete %></li>
				<% else %>
				<li><%= link_to %Q|Sign Up|, new_user_path %></li>
				<li><%= link_to %Q|Log In|, new_user_session_path %></li>
				<% end %>
			</ul>
			<br class="clear" />
	</div>

	<% flash.each do |type, message| %>
		<div class="alert flash <%= type %>">
			<%= message %>
		</div>
	<% end %>

<%= yield %>

</body>
</html>
